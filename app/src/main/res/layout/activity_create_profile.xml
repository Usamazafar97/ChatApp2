<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_profile"
    android:background="#F8F6F6"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_profile_title"
        android:text="Create profile"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/create_profile_title"
        android:background="#D6D4D4"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/profile_pic"
        android:layout_below="@+id/create_profile_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/profile"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="20dp"
        android:layout_height="15dp"
        android:id="@+id/change_profile_pic"
        android:layout_below="@+id/profile_pic"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:src="@drawable/ic_baseline_camera_alt_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@+id/change_profile_pic"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_name_title"
        android:layout_marginLeft="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_name_input"
        android:layout_below="@+id/profile_name_title"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/firstName"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:hint="First Name"
            android:layout_marginTop="5dp"
            android:background="@drawable/grey_rounded_rect"
            android:layout_marginLeft="10dp"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14dp"/>
        <EditText

            android:id="@+id/lastName"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:hint="Last Name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp"
            android:background="@drawable/grey_rounded_rect"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:textSize="14dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_name_input"
        android:layout_marginTop="15dp"
        android:id="@+id/date_of_birth_title"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/profile_date_of_birth"
        android:layout_below="@+id/date_of_birth_title"
        android:hint="DD/MM/YY"
        android:layout_marginTop="5dp"
        android:background="@drawable/grey_rounded_rect"
        android:inputType="datetime"
        android:paddingLeft="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:onClick="onClickDate"
        android:clickable="true"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_date_of_birth"
        android:layout_marginTop="15dp"
        android:id="@+id/gender_title"
        android:layout_marginLeft="15dp"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profile_gender"
        android:layout_below="@+id/gender_title"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selector"
            android:text="Male"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:textColor="@drawable/text_color"
            android:gravity="center"
            android:elevation="4dp"/>
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selector"
            android:text="Female"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:textColor="@drawable/text_color"
            android:gravity="center"
            android:elevation="4dp"/>
        <RadioButton
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:background="@drawable/radio_selector"
            android:text="Prefer not to say"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:button="@android:color/transparent"
            android:clickable="true"
            android:textColor="@drawable/text_color"
            android:gravity="center"
            android:elevation="4dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@+id/profile_gender"
        android:layout_marginTop="15dp"
        android:id="@+id/phno_title"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:id="@+id/phoneNumber"
        android:layout_below="@+id/phno_title"
        android:background="@drawable/grey_rounded_rect"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="top|left"
        android:hint="03305974054"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:paddingTop="4dp"
        android:paddingLeft="10dp"
        android:scrollHorizontally="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="15dp"
        android:id="@+id/bio_title"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/profile_bio"
        android:layout_below="@+id/bio_title"
        android:lines="4"
        android:background="@drawable/grey_rounded_rect"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:hint="Tell more about yourself..."
        android:textSize="14dp"
        android:textColor="@color/black"
        android:paddingTop="4dp"
        android:paddingLeft="10dp"
        android:scrollHorizontally="false"/>

    <Button
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:id="@+id/save_button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/main_screen_buttons"
        android:shadowColor="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textSize="15dp"
        android:text="Save"
        android:clickable="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>